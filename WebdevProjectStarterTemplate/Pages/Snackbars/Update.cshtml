@page "{snackbarId:int}"
@model WebdevProjectStarterTemplate.Pages.Snackbars.Update

<div class="row">
    <div class="col">
        <h1>Update Snackbar</h1>
        <form method="POST">
            <input type="hidden" asp-for="Snackbar.Id" />
            <div class="form-group">
                <label asp-for="Snackbar.Naam">Name:</label>
                <input asp-for="Snackbar.Naam" class="form-control" />
                <span asp-validation-for="Snackbar.Naam"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Update</button>
                <button asp-page-handler="Cancel" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>

<div class="row mt-4">
    <div class="col">
        <h2>Snacks van deze Snackbar</h2>
        <a href="~/Snacks/Create" class="btn btn-primary my-3">Create New Snack</a>
    </div>
</div>

<div class="row">
    @foreach (var snack in Model.ListSnacks)
    {
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Naam: @snack.Naam</h5>
                    <p class="card-text"><strong>Prijs:</strong> @snack.Prijs</p>
                    <p class="card-text"><strong>Beschrijving:</strong> @snack.Beschrijving</p>
                    <a asp-page="/Snacks/Delete" asp-route-snackId="@snack.Id" class="btn btn-danger">Delete</a>
                    <a asp-page="/Snacks/Update" asp-route-snackId="@snack.Id" class="btn btn-info">Update</a>
                </div>
            </div>
        </div>
    }
</div>
