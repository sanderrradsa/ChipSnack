@page
@model WebdevProjectStarterTemplate.Pages.Register.IndexModel

<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1 class="text-center">Registreer een nieuwe gebruiker.</h1>
                <form method="post">
                    <!-- Name input -->
                    <div class="form-group">
                        <label class="form-label" for="naam">Naam</label>
                        <input type="text" id="naam" name="naam" class="form-control" />
                    </div>

                    <!-- Email input -->
                    <div class="form-group">
                        <label class="form-label" for="email">Email adres</label>
                        <input type="email" id="email" name="email" class="form-control" />
                    </div>

                    <!-- Password input -->
                    <div class="form-group">
                        <label class="form-label" for="password">Wachtwoord</label>
                        <input type="password" id="password" name="password" class="form-control" />
                    </div>

                    <!-- Admin input -->
                    <div class="form-check">
                        <input type="checkbox" id="admin" name="admin" class="form-check-input" value="1" />
                        <label class="form-check-label" for="admin">Admin</label>
                    </div>

                    <!-- Submit button -->
                    <div class="text-center m-2">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
