@page
@model WebdevProjectStarterTemplate.Pages.Snacks.Create
@{
    <div class="row">
        <div class="col">
            <h1>Create New Snack</h1>
            <form method="POST">
                <div class="form-group">
                    <label asp-for="snack.Naam">Naam:</label>
                    <input asp-for="snack.Naam" class="form-control" />
                    <span asp-validation-for="snack.Naam"></span>
                </div>
                <div class="form-group">
                    <label asp-for="snack.Prijs">Prijs:</label>
                    <input asp-for="snack.Prijs" class="form-control" />
                    <span asp-validation-for="snack.Prijs"></span>
                </div>
                <div class="form-group">
                    <label asp-for="snack.Beschrijving">Beschrijving:</label>
                    <input asp-for="snack.Beschrijving" class="form-control" />
                    <span asp-validation-for="snack.Beschrijving"></span>
                </div>
                <div class="input-group mt-3">
                    <label class="input-group-text">snackbar:</label>
                    <select asp-for="snack.Snackbarid" class="form-control">
                        <option></option>
                        @foreach (var SnackBars in Model.ListSnackBars)
                        {
                            <option asp-for="snack.Snackbarid" value="@SnackBars.Id">@SnackBars.Naam</option>
                        }
                    </select>

                </div>
                <div class="input-group mt-3">
                    <label class="input-group-text">categorie:</label>
                    <select asp-for="snack.CategorieId" class="form-control">
                        <option></option>
                        @foreach (var Categorie in Model.ListCategorie)
                        {
                            <option asp-for="snack.CategorieId" value="@Categorie.Id">@Categorie.Naam</option>
                        }
                    </select>

                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a href="~/Snackbars/Index" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>

}
